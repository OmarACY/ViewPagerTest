<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:text="@string/fragment_state_pager"
            android:hint="@string/fragment_state_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentStatePager"
            android:textAllCaps="false"/>

        <Button
            android:text="@string/fragment_pager"
            android:hint="@string/fragment_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnFragmentPager"
            android:textAllCaps="false"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>